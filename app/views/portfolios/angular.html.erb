<h1>Angular Portfolio Items</h1>


<%= link_to "Create New Item", new_portfolio_path if logged_in?(:sige_admin)%>


<% @angular_portfolio_items.each do |portfolio_items| %>
    <p><%= link_to portfolio_items.title, portfolio_show_path(portfolio_items.id) %></p>
    <p><%= portfolio_items.subtitle %></p>
    <p><%= portfolio_items.body %></p>
    <%= image_tag portfolio_items.thumb_image if !portfolio_items.thumb_image.nil? %>
    <%= link_to "Edit", edit_portfolio_path(portfolio_items.id) if logged_in?(:sige_admin) %>
    <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_items), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:sige_admin)%>
<% end %>